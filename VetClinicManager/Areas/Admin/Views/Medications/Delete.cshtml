@model VetClinicManager.Areas.Admin.DTOs.Medications.MedicationDeleteDto

@{
    ViewData["Title"] = "Delete Medication/Material";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]: @Model.Name</h1>
    <hr />

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Confirmation</h4>
        <p>Are you sure you want to permanently delete this medication/material from the system? <strong>This action cannot be undone.</strong></p>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Medication/Material details to be deleted
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 col-md-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="Medications" asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, delete</button>
        <a asp-area="Admin" asp-controller="Medications" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
